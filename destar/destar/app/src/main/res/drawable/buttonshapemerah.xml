<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    03
    <item android:state_pressed="true" >
        <shape>
            <solid
            android:color="#FC0404" />
            <stroke
            android:width="1dp"
            android:color="#CC3434" />
            <corners
            android:radius="3dp" />
            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
            android:startColor="#EF4444"
            android:endColor="#BE3737"
            android:angle="270" />
            <stroke
            android:width="1dp"
            android:color="#992f2f" />
            <corners
            android:radius="3dp" />
            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
        </shape>
    </item>
