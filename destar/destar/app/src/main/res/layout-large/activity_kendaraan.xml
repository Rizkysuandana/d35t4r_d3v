<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kendaraan"
    android:orientation="vertical">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:layout_above="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Germor"
            android:orientation="horizontal"
            android:layout_marginVertical="2.5dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/motor_roda_tiga"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motor Roda Tiga (Mini Dump Truck)"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="@font/calibri" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIAR karya 300"
                    android:fontFamily="@font/calibri"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas : 1.000 - 1.200 Kg"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibri"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lokasi"
                    android:fontFamily="@font/calibri"
                    android:textSize="10dp"
                    android:textColor="@color/colorBlue"
                    android:layout_gravity="right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Rp.250.000/Hari"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="2.5dp"
            android:id="@+id/pickupStandar">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pickupstandar"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up Standar"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="@font/calibri" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MITSUBISHI Colt L300"
                    android:fontFamily="@font/calibri"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas : 1.500 - 2.500 Kg"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibri"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lokasi"
                    android:fontFamily="@font/calibri"
                    android:textSize="10dp"
                    android:textColor="@color/colorBlue"
                    android:layout_gravity="right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Rp.400.000/Hari"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="2.5dp"
            android:id="@+id/DumpTruck">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pickupdumptruckk"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up Dump Truck"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="@font/calibri" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MITSUBISHI Colt Diesel FE 74 L"
                    android:fontFamily="@font/calibri"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas : 3.000 - 6.000 Kg"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibri"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lokasi"
                    android:fontFamily="@font/calibri"
                    android:textSize="10dp"
                    android:textColor="@color/colorBlue"
                    android:layout_gravity="right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorblack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_gravity="right"
                    android:fontFamily="@font/calibri"
                    android:text="Rp.800.000/Hari"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="2.5dp"
            android:id="@+id/pickupbox">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/box_pickup"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up Box"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="@font/calibri" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUZUKI Mega Carry Box"
                    android:fontFamily="@font/calibri"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas : 2.000 - 3.000 Kg"
                    android:textSize="15dp"
                    android:fontFamily="@font/calibri"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lokasi"
                    android:fontFamily="@font/calibri"
                    android:textSize="10dp"
                    android:textColor="@color/colorBlue"
                    android:layout_gravity="right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Rp.450.000/Hari"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"/>
</RelativeLayout>