<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.destar.platform.destar.Dashboard">

    <include
        layout="@layout/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorgrey2"
            android:layout_above="@+id/bar_dashboard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:background="@drawable/textboxdesainkecil"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/btn_transportasi"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:layout_margin="2.5dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="@drawable/background_menu"
                                    android:orientation="vertical"
                                    android:id="@+id/btnkolat">

                                    <ImageView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/transportasi1"
                                        android:scaleType="fitXY" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:background="@color/dark_blue" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:text="DE ANTAR"
                                        android:fontFamily="@font/caviardreams"
                                        android:textSize="15sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_perdagangan"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:layout_margin="2.5dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/background_menu"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/btnkolat2"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/perdagangan1"
                                        android:scaleType="fitXY" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:background="@color/dark_blue" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="DE PASAR"
                                        android:fontFamily="@font/caviardreams"
                                        android:textSize="15sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/btn_penyewaan"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:layout_margin="2.5dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="@drawable/background_menu"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ssss"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:src="@drawable/desewa"
                                        android:scaleType="fitXY" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:background="@color/dark_blue" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/caviardreams"
                                        android:text="DE SEWA"
                                        android:textSize="15sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_kesepakatan"
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:layout_margin="2.5dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="@drawable/background_menu"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/sssssaaaa"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:background="@drawable/kesepakatan1"
                                        android:padding="10dp"
                                        android:scaleType="fitXY" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginHorizontal="5dp"
                                        android:background="@color/dark_blue" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="DE BAYAR"
                                        android:fontFamily="@font/caviardreams"
                                        android:textSize="15sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/textboxdesainkecil"
                    android:layout_marginTop="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/recenliatas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:weightSum="100">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="70"
                                android:fontFamily="@font/caviardreams"
                                android:gravity="left"
                                android:text="PROMO"
                                android:textColor="#322e47"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="30"
                                android:fontFamily="@font/caviardreams"
                                android:gravity="right"
                                android:text="See All"
                                android:textColor="#308fe9"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <HorizontalScrollView
                            android:id="@+id/recentbawah"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="3dp">

                                <android.support.v7.widget.CardView
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="8dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="100">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="28"
                                                android:gravity="center">

                                                <ImageView
                                                    android:layout_width="67dp"
                                                    android:layout_height="80dp"
                                                    android:scaleType="fitXY"
                                                    android:src="@drawable/promo" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="72"
                                                android:orientation="vertical">


                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="6dp"
                                                    android:fontFamily="@font/caviardreams"
                                                    android:text="Promo DE-OJEK"
                                                    android:textColor="#000000"
                                                    android:textSize="16dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="4dp"
                                                    android:fontFamily="@font/caviardreams"
                                                    android:text="Nikmati potongan harga di setiap perjalanan anda"
                                                    android:textColor="#757575"
                                                    android:textSize="14dp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>


                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="8dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="100">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="28"
                                                android:gravity="center">

                                                <ImageView
                                                    android:layout_width="67dp"
                                                    android:layout_height="80dp"
                                                    android:scaleType="fitXY"
                                                    android:src="@drawable/rwd" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="72"
                                                android:orientation="vertical">


                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="6dp"
                                                    android:fontFamily="@font/caviardreams"
                                                    android:text="DE-BARANG Rewards"
                                                    android:textColor="#000000"
                                                    android:textSize="16sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="4dp"
                                                    android:fontFamily="@font/caviardreams"
                                                    android:text="Dapatkan 50 poin untuk setiap pengantaran barang menggunakan DE-GERMOR"
                                                    android:textColor="#757575"
                                                    android:textSize="14dp" />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>


                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxdesainkecil">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="25"
                                android:gravity="center"
                                android:background="@drawable/background_menu"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/pestisida" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="PUPUK &amp; PESTISIDA"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="25"
                                android:gravity="center"
                                android:background="@drawable/background_menu"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/alkes" />

                                <View
                                    android:id="@+id/view2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="FARMASI &amp; ALAT KESEHATAN"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="25"
                                android:gravity="center"
                                android:background="@drawable/background_menu"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/konsumsi" />

                                <View
                                    android:id="@+id/view3"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="KONSUMSI &amp; BAHAN POKOK"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="25"
                                android:gravity="center"
                                android:background="@drawable/background_menu"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/guhring" />

                                <View
                                    android:id="@+id/view4"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="PRODUK GUHRING"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:layout_weight="25"
                                android:gravity="center"
                                android:background="@drawable/background_menu"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_marginBottom="6dp"
                                    android:src="@drawable/bahankimia" />

                                <View
                                    android:id="@+id/view5"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="12dp"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="BAHAN KIMIA"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:layout_marginHorizontal="4dp"
                                android:gravity="center"
                                android:background="@drawable/background_menu"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_marginBottom="6dp"
                                    android:src="@drawable/export" />

                                <View
                                    android:id="@+id/view6"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="PRODUK EKSPOR"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:layout_marginHorizontal="4dp"
                                android:background="@drawable/background_menu"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_marginBottom="6dp"
                                    android:src="@drawable/image12" />

                                <View
                                    android:id="@+id/view7"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_margin="2dp"
                                    android:background="@color/putih" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="PRODUK LAINNYA"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/bar_dashboard">

            <include
                layout="@layout/layout_toolbar"
                tools:context="com.destar.platform.destar.Toolbar" />
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>