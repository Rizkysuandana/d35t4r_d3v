<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deSewaLainnya"
    android:orientation="vertical">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bor"
                android:background="@drawable/textboxdesainkecil"
                android:orientation="horizontal"
                android:layout_margin="2.5dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/borlistrik"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/textboxdesainkecil"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bor Listrik"
                        android:textStyle="bold"
                        android:id="@+id/alat1"
                        android:textSize="20dp"
                        android:fontFamily="@font/pala" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOSCH GSB 16 Re"
                        android:id="@+id/merk1"
                        android:fontFamily="@font/pala"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat1"
                        android:text="Jl. Rawa, RT.11 RW.04, Cipuyuh, Sukabumi, Jawa Barat"
                        android:textSize="15sp"
                        android:fontFamily="@font/pala"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Lokasi"
                        android:fontFamily="@font/pala"
                        android:textSize="10dp"
                        android:textColor="@color/colorBlue"
                        android:layout_gravity="right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Rp.70.000/Hari"
                        android:textColor="@color/colorGreen"
                        android:textStyle="bold"
                        android:fontFamily="@font/pala"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/textboxdesainkecil"
                android:id="@+id/buku">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/buku"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/textboxdesainkecil"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buku"
                        android:id="@+id/alat2"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/pala" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BERTANAM MANGGA"
                        android:id="@+id/merk2"
                        android:fontFamily="@font/pala"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kantor DESTAR"
                        android:id="@+id/alamat2"
                        android:textSize="15dp"
                        android:fontFamily="@font/pala"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Lokasi"
                        android:fontFamily="@font/pala"
                        android:textSize="10dp"
                        android:textColor="@color/colorBlue"
                        android:layout_gravity="right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Rp.8.000/Hari"
                        android:textColor="@color/colorGreen"
                        android:textStyle="bold"
                        android:fontFamily="@font/pala"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/textboxdesainkecil"
                android:id="@+id/carrier">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/carrier"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/textboxdesainkecil"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tas Carrier"
                        android:textStyle="bold"
                        android:id="@+id/alat3"
                        android:textSize="20dp"
                        android:fontFamily="@font/pala" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONSINA Alamo 75"
                        android:id="@+id/merk3"
                        android:fontFamily="@font/pala"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kantor DESTAR"
                        android:id="@+id/alamat3"
                        android:textSize="15dp"
                        android:fontFamily="@font/pala"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Lokasi"
                        android:fontFamily="@font/pala"
                        android:textSize="10dp"
                        android:textColor="@color/colorBlue"
                        android:layout_gravity="right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="right"
                        android:fontFamily="@font/pala"
                        android:text="Rp.80.000/Hari"
                        android:textColor="@color/colorGreen"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2.5dp"
                android:background="@drawable/textboxdesainkecil"
                android:id="@+id/kamera">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/kamera"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/textboxdesainkecil"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kamera"
                        android:id="@+id/alat4"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/pala" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANON Eos 550D"
                        android:id="@+id/merk4"
                        android:fontFamily="@font/pala"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kantor DESTAR"
                        android:id="@+id/alamat4"
                        android:textSize="15dp"
                        android:fontFamily="@font/pala"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Lokasi"
                        android:fontFamily="@font/pala"
                        android:textSize="10dp"
                        android:textColor="@color/colorBlue"
                        android:layout_gravity="right"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Rp.20.000/Hari"
                        android:textColor="@color/colorGreen"
                        android:textStyle="bold"
                        android:fontFamily="@font/pala"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"/>
</RelativeLayout>