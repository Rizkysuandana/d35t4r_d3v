<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3EFF0">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/logo_pemerintah">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_above="@+id/formlogin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/gambarlogin" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/formlogin"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/caviardreams"
                    android:text="MASUK"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"
                    android:textSize="18dip"
                    android:id="@+id/msk"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/msk"
                    android:id="@+id/form"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email : "
                            android:fontFamily="@font/caviardreams"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/colorOrange"
                            android:layout_marginHorizontal="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">
                            <EditText
                                android:id="@+id/txt_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:hint="Email"
                                android:textColorLink="@color/colorblack"
                                android:textColorHighlight="@color/colorblack"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/caviardreams"
                                android:inputType="textEmailAddress"
                                android:singleLine="true"
                                android:text="Ali" />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/image_email_orange"
                                android:id="@+id/image_email"
                                android:layout_alignParentRight="true"
                                android:layout_marginHorizontal="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password : "
                            android:fontFamily="@font/caviardreams"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/colorOrange"
                            android:layout_marginHorizontal="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/txt_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:hint="Kata Sandi"
                                android:textColorLink="@color/colorblack"
                                android:textColorHighlight="@color/colorblack"
                                android:inputType="textPassword"
                                android:layout_centerVertical="true"
                                android:password="true"
                                android:singleLine="true"
                                android:text="@Bismillah12" />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/image_password_orange"
                                android:layout_alignParentRight="true"
                                android:layout_marginHorizontal="10dp"
                                android:id="@+id/image_sandi"/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/form"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_marginTop="30dp">
                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="masuk"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/caviardreams"
                        android:background="@drawable/button_login"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Lupa Kata Sandi?"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/caviardreams"
                        android:id="@+id/lupasandi"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logo_pemerintah"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bumn_logo" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/logo_ppi" />
    </RelativeLayout>

</RelativeLayout>