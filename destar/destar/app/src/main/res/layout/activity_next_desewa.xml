<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/next_desewa"
    android:layout_height="match_parent"
    tools:context=".NextDesewa">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="@drawable/textboxdesainkecil">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RINCIAN"
                    android:textSize="25sp"
                    android:textColor="@color/colorblack"
                    android:fontFamily="@font/pala"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorblack"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/textboxdesainkecil">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:src="@drawable/image_ketentuan_layanan"
                        android:id="@+id/gambarkendaraan"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pala"
                            android:id="@+id/namapesanan"
                            android:layout_gravity="center"
                            android:text="Nama Barang"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pala"
                            android:id="@+id/merk"
                            android:textSize="15dp"
                            android:text="Merk Barang"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pala"
                            android:textSize="15dp"
                            android:text="Kapasitas"
                            android:id="@+id/kapasitas"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <Button
                                android:layout_width="30dp"
                                android:onClick="increment"
                                android:text="+"
                                android:background="@color/putih"
                                android:layout_gravity="center"
                                android:layout_height="30dp" />
                            <TextView
                                android:textColor="@color/colorGreen"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginHorizontal="2dp"
                                android:fontFamily="@font/pala"
                                android:id="@+id/quantity_textview"
                                android:textSize="20sp"/>
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:onClick="decrement"
                                android:text="-"
                                android:layout_gravity="center"
                                android:background="@color/putih"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/textboxdesainkecil"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:id="@+id/gbr1"
                        android:layout_gravity="center"
                        android:src="@drawable/image_time" />
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pesan : "
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/tglpesan"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/gbr1"
                        android:fontFamily="@font/pala"/>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        android:id="@+id/tanggalpesan"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/textboxdesainkecil"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/textboxdesainkecil"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/triple_dot"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/textboxdesainkecil"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gbr2"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/image_time_blue" />

                    <TextView
                        android:id="@+id/tglkembali"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toRightOf="@+id/gbr2"
                        android:fontFamily="@font/pala"
                        android:text="Tanggal Kembali"
                        android:textSize="20dp" />
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        android:id="@+id/tanggalkembali"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@drawable/textboxdesainkecil"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/textboxdesainkecil"
                    android:layout_marginVertical="10dp">
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipepengambilan"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pala"
                            android:textSize="20dp"
                            android:id="@+id/diambil"
                            android:text="Diambil" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pala"
                            android:textSize="20dp"
                            android:id="@+id/diantar"
                            android:text="Diantar"/>
                    </RadioGroup>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/textboxdesainkecil">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unggah Foto KTP/Kartu Keluarga/SIM"
                        android:fontFamily="@font/pala"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/unggahtext"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"
                        android:layout_alignParentBottom="true"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/unggah_foto"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxdesainkecil"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:src="@drawable/image_place"
                        android:layout_gravity="center"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pala"
                        android:id="@+id/beratKendaraan"
                        android:textSize="20dp"
                        android:hint="Alamat Anda"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/textboxdesainkecil"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pala"
                    android:text="PEMBAYARAN"
                    android:textColor="@color/colorblack"
                    android:textSize="25sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorblack"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxdesainkecil"
                    android:orientation="vertical"
                    android:layout_marginVertical="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/harga" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pala"
                                android:text="Harga"
                                android:textColor="@color/colorblack"
                                android:textSize="15dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@color/cardview_light_background">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harga"
                                android:inputType="number"
                                android:fontFamily="@font/pala"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_gravity="right"
                                android:textColor="@color/colorGreen"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"
                        android:layout_gravity="bottom"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textboxdesainkecil"
                    android:orientation="vertical"
                    android:layout_marginVertical="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/jenispembayaran" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jenis Pembayaran"
                                android:textAlignment="center"
                                android:textColor="@color/colorblack"
                                android:fontFamily="@font/pala"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/jenispembayaran"
                                android:layout_gravity="right">
                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorblack"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_blue"
                android:layout_marginVertical="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/pala"
                    android:text="TOTAL : "
                    android:textColor="@color/cardview_light_background"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalHarga"
                    android:text="Harga"
                    android:fontFamily="@font/pala"
                    android:textSize="15sp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/cardview_light_background"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="20dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Pesan"
                    android:id="@+id/pesan"
                    android:textStyle="bold"
                    android:textColor="@color/putih"
                    android:fontFamily="@font/pala"
                    android:textSize="20sp"
                    android:background="@drawable/shape_green"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"/>

</RelativeLayout>