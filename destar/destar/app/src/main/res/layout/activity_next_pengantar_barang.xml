<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.destar.platform.destar.NextPengantarBarang"
    android:orientation="vertical"
    android:background="#C2C2C2">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/line">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:text="RINCIAN"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/formWaktu"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/line">

            <ImageView
                android:id="@+id/waktu"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:src="@drawable/image_time"
                android:layout_marginRight="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/waktu"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/waktuAntar"
                    android:layout_marginTop="5dp"
                    android:text="Waktu Antar"
                    android:fontFamily="@font/calibri"
                    android:textSize="23sp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:visibility="visible"
                    android:background="@color/colorblack"
                    android:layout_below="@+id/waktuAntar"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/formlokasijemput"
            android:layout_below="@+id/formWaktu"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:id="@+id/pickupfrom"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:src="@drawable/image_place"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pickupfrom"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lokasijemput"
                    android:layout_marginTop="5dp"
                    android:text="Lokasi Jemput"
                    android:fontFamily="@font/calibri"
                    android:textSize="23sp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:visibility="visible"
                    android:background="@color/colorblack"
                    android:layout_below="@+id/lokasijemput"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dots"
            android:layout_below="@+id/formlokasijemput"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id="@+id/tripledot"
                android:src="@drawable/triple_dot"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/formlokasitujuan"
            android:layout_below="@+id/dots"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id="@+id/destLoc"
                android:src="@drawable/image_place_tujuan"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/destLoc"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lokasitujuan"
                    android:layout_marginTop="5dp"
                    android:text="Lokasi Tujuan"
                    android:fontFamily="@font/calibri"
                    android:textSize="23sp"
                    android:layout_alignParentRight="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:visibility="visible"
                    android:background="@color/colorblack"
                    android:layout_below="@+id/lokasitujuan"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <include
        android:id="@+id/bar"
        layout="@layout/layout_toolbar"
        tools:context="com.destar.platform.destar.Toolbar" />
</RelativeLayout>