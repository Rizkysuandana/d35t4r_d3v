<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.destar.platform.destar.NextPengantarBarang"
    android:orientation="vertical"
    android:background="#C2C2C2"
    android:id="@+id/next_pengantarbarang">
    <include layout="@layout/header"
        android:id="@+id/header"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textboxdesainkecil">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/line">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="15dp"
                                android:text="RINCIAN"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:fontFamily="@font/caviardreams"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#000000"
                                android:layout_marginTop="3dp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/formWaktu"
                            android:layout_marginHorizontal="10dp"
                            android:layout_below="@+id/line">

                            <ImageView
                                android:id="@+id/waktu"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/image_time" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/waktu"
                                android:layout_centerVertical="true">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/waktuAntar"
                                    android:layout_marginTop="5dp"
                                    android:text="Waktu Tempuh"
                                    android:fontFamily="@font/caviardreams"
                                    android:textSize="20sp"
                                    android:layout_alignParentRight="true"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:visibility="visible"
                                    android:background="@color/colorblack"
                                    android:layout_below="@+id/waktuAntar"/>
                            </RelativeLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/formlokasijemput"
                            android:layout_below="@+id/formWaktu"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:id="@+id/pickupfrom"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/image_place"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/pickupfrom"
                                android:layout_centerVertical="true">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lokasijemput"
                                    android:layout_marginTop="5dp"
                                    android:text="Lokasi Jemput"
                                    android:fontFamily="@font/caviardreams"
                                    android:textSize="20sp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:visibility="visible"
                                    android:background="@color/colorblack"
                                    android:layout_below="@+id/lokasijemput"/>
                            </RelativeLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dots"
                            android:layout_below="@+id/formlokasijemput"
                            android:layout_marginHorizontal="10dp">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:id="@+id/tripledot"
                                android:src="@drawable/triple_dot"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="5dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/formlokasitujuan"
                            android:layout_below="@+id/dots"
                            android:layout_marginHorizontal="10dp">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:id="@+id/destLoc"
                                android:src="@drawable/image_place_tujuan"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/destLoc"
                                android:layout_centerVertical="true">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lokasitujuan"
                                    android:layout_marginTop="5dp"
                                    android:text="Lokasi Tujuan"
                                    android:fontFamily="@font/caviardreams"
                                    android:textSize="20sp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:visibility="visible"
                                    android:background="@color/colorblack"
                                    android:layout_below="@+id/lokasitujuan"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/textboxdesainkecil">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/namabarang"
                                    android:src="@drawable/image_box_barang"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/caviardreams"
                                    android:id="@+id/nambar"
                                    android:layout_marginLeft="5dp"
                                    android:text="Nama Barang"
                                    android:textSize="20sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/berat"
                                    android:src="@drawable/image_berat"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/berbar"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/caviardreams"
                                    android:text="Perkiraan Berat Barang"
                                    android:textSize="20sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/pesankapan">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pesan Sekarang"
                                    android:fontFamily="@font/caviardreams"
                                    android:textSize="15sp"
                                    android:id="@+id/sekarang"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="Pesan Nanti"
                                    android:id="@+id/nanti"
                                    android:fontFamily="@font/caviardreams"/>
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:id="@+id/inputtanggal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Masukkan Tanggal Pesanan"
                                android:textSize="15sp"
                                android:id="@+id/tanggalinput"
                                android:fontFamily="@font/caviardreams"/>
                            <Button
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/btntanggal"
                                android:drawableTop="@drawable/arrow_down" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="-8dp"
                android:background="@drawable/background_menu2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp"
                android:paddingVertical="10dp"
                android:layout_above="@+id/formpesan">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/background_menu2"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="15sp"
                        android:text="Rp13.000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/background_menu2"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.6 Km"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/formpesan">
                <Button
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshapelogin"
                    android:text="Pesan"
                    android:id="@+id/pesannext"
                    android:textSize="20dp"
                    android:fontFamily="@font/caviardreams"
                    android:textColor="@color/cardview_light_background"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


    <include
        android:id="@+id/bar"
        layout="@layout/layout_toolbar"
        tools:context="com.destar.platform.destar.Toolbar" />
</LinearLayout>