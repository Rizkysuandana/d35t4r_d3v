<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorgrey"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/beranda"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="37dp"
                android:src="@drawable/motor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="Sepeda Motor"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:src="@drawable/gerobak_motor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="Gerobak Motor"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/riwayat"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:src="@drawable/pickup" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="Pickup"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickupBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:src="@drawable/pickup_box" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="Pickup Box"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/akun"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/engkel_bak" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviardreams"
                android:text="Engkel Bak"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>