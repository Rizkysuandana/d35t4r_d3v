<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_blue">
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Pastikan alamat yang anda masukkan sudah benar agar driver kami dapat lebih mudah untuk mengantar pesanan Anda."
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        android:textColor="@color/putih"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonpopup"
        android:layout_below="@+id/tv"
        android:layout_alignParentRight="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_benar"
            android:text="OK"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:textSize="18dp"
            android:background="@color/colorBlue"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cek"
            android:layout_toRightOf="@+id/btn_benar"
            android:text="Cek Kembali"
            android:textStyle="bold"
            android:textColor="@color/putih"
            android:textSize="18dp"
            android:background="@color/colorBlue"/>
    </RelativeLayout>

</RelativeLayout>